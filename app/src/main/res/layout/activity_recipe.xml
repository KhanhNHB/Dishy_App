<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F3"
    tools:context=".activities.RecipeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ra"
        android:visibility="gone"
        app:navigationIcon="@drawable/ic_keyboard_return"
        app:titleTextColor="@color/colorWhite"
        app:title="Ga chien nuoc mam"
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<androidx.core.widget.NestedScrollView
    android:id="@+id/nsv_recipe_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170">

        <ImageView
            android:id="@+id/img_avatar_food_ra"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_button_back_recipe_activity"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@drawable/ic_keyboard_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/colorWhite"
            android:id="@+id/txt_name_recipe_ra"
            android:text="@string/app_name"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_star_recipe_1"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_2"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_3"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_4"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
            <ImageView
                android:id="@+id/img_star_recipe_5"
                android:src="@drawable/ic_star_yellow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_marginTop="@dimen/dp3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_favorite_ra"
                android:src="@drawable/ic_favorite_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp5"
                android:text="20"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_save_recipe_ra"
                android:layout_marginLeft="@dimen/dp10"
                android:src="@drawable/ic_file_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp5"
                android:text="Lưu về"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_chef_ra"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_avatar_chef_ra"
            android:src="@drawable/img_check"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            app:riv_border_width="@dimen/dp1"
            app:riv_border_color="@color/colorWhite"
            app:riv_corner_radius="@dimen/dp50" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="7">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/sp15"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                       android:src="@drawable/ic_favorite"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp5"
                        android:text="20"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_following_recipe_activity"
                android:background="@drawable/custom_frame_input"
                android:text="Theo dõi"
                android:padding="@dimen/dp5"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/custom_number_eater"
        android:layout_gravity="right"
        android:paddingRight="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:paddingTop="@dimen/dp5"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_number_eater"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp3"
            android:textStyle="bold"
            android:text="khẩu phần"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/custom_frame_material"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="@string/material"
                    android:textStyle="bold"
                    android:layout_weight="8"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp30"/>
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_div"
                    android:gravity="center"
                    android:text="-"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:background="@drawable/custom_button_next_step"/>
                <Button
                    android:id="@+id/btn_sum"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="+"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:background="@drawable/custom_button_next_step"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_material_recipe_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Các bước thực hiện"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_make_step_ra"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>