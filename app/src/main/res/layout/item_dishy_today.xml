<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_dishy_today"
            android:src="@drawable/img_check"
            android:scaleType="fitXY"
            android:padding="3.5dp"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp100"/>
        <ImageView
            android:src="@drawable/custom_frame_border_image"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp100"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorGray"
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_name_dishy_today"
                    android:text="Cơm gà"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_time_dishy_today"
                    android:text="10 phút"
                    android:layout_marginBottom="@dimen/dp3"
                    android:textSize="@dimen/sp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>